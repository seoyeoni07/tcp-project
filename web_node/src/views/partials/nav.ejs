<% const isLoggedIn = !!user; %>

<header class="nav">
  <div class="nav-left">
    <a href="/chat" class="nav-logo">UniStudyHub</a>
  </div>

  <nav class="nav-menu">
    <a href="/chat" class="<%= active === 'chat' ? 'active' : '' %>">채팅</a>
    <a href="/worklog" class="<%= active === 'worklog' ? 'active' : '' %>">업무일지</a>
    <a href="/meeting" class="<%= active === 'meeting' ? 'active' : '' %>">회의실 예약</a>
    <a href="/board" class="<%= active === 'board' ? 'active' : '' %>">게시판</a>
  </nav>

  <div class="nav-right">
    <% if (isLoggedIn) { %>
      <span class="nav-user"><%= user.user_name || user.email %>님</span>
      <a href="/logout">로그아웃</a>
    <% } else { %>
      <a href="/">로그인</a>
      <a href="/signup">회원가입</a>
    <% } %>
  </div>
</header>

<style>
.nav { 
  display:flex; 
  justify-content:space-between; 
  align-items:center; 
  padding:12px 20px; 
  background:#f4f4f4;
  border-bottom:1px solid #ddd;
}
.nav-menu a {
  margin:0 10px;
  text-decoration:none;
  color:#333;
}
.nav-menu .active {
  font-weight:bold;
  color:#0d6efd;
}
.nav-right a {
  margin-left:10px;
}
</style>
